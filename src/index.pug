//- Render time spans function
mixin spans(spans)
  each span in spans
    div(class="d-flex flex-column flex-md-row flex-items-start mb-2")
      h5(class="col-12 col-sm-2")=span.time
      ul(class="col-12 col-sm-10 d-flex flex-column flex-items-start list-style-none")
        each data in span.data
          li
            span.text-bold=data.title
            if data.subtitle
              span=' // '+data.subtitle
          if data.additional1
            li(class="text-gray")=data.additional1
          if data.additional2
            li(class="text-gray")=data.additional2
          if data.url
            a(href=data.url target="out")=data.url
          li(class="mb-1")

doctype html
html(lang="en")
  head
    script(async src="https://www.googletagmanager.com/gtag/js?id=UA-125154255-1")
    script.
      window.dataLayer = window.dataLayer || [];
