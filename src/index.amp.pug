//- Render time spans function
mixin spans(spans)
  each span in spans
    div(class="d-flex flex-column flex-md-row flex-items-start mb-2")
      h5(class="col-12 col-sm-2")=span.time
      ul(class="col-12 col-sm-10 d-flex flex-column flex-items-start list-style-none")
        each data in span.data
          li
            span.text-bold=data.title
            if data.subtitle
              span=' // '+data.subtitle
          if data.additional1
            li(class="text-gray mb-1")=data.additional1
          if data.additional2
            li(class="text-gray mb-1")=data.additional2
          if data.url
            a(href=data.url target="_blank")=data.url

doctype html
html(lang="en" amp)
  head
    script(async custom-element="amp-analytics" src="https://cdn.ampproject.org/v0/amp-analytics-0.1.js")
    title Jens Metzner
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width,minimum-scale=1,initial-scale=1,user-scalable=no")
    meta(name="msapplication-TileColor", content="#da532c")
    meta(name="theme-color", content="#ffffff")
    style(amp-custom)
      include ../public/index.amp.css
    link(rel="canonical" href="/index.html")
    link(rel="apple-touch-icon", sizes="180x180", href="/apple-touch-icon.png")
    link(rel="icon", type="image/png", sizes="32x32", href="/favicon-32x32.png")
    link(rel="icon", type="image/png", sizes="16x16", href="/favicon-16x16.png")
    link(rel="manifest", href="/site.webmanifest")
    link(rel="mask-icon", href="/safari-pinned-tab.svg", color="#5bbad5")
    script(type="application/ld+json")
      include ld.json
    script(async src="https://cdn.ampproject.org/v0.js")
    style(amp-boilerplate).
      body{-webkit-animation:-amp-start 8s steps(1,end) 0s 1 normal both;-moz-animation:-amp-start 8s steps(1,end) 0s 1 normal both;-ms-animation:-amp-start 8s steps(1,end) 0s 1 normal both;animation:-amp-start 8s steps(1,end) 0s 1 normal both}@-webkit-keyframes -amp-start{from{visibility:hidden}to{visibility:visible}}@-moz-keyframes -amp-start{from{visibility:hidden}to{visibility:visible}}@-ms-keyframes -amp-start{from{visibility:hidden}to{visibility:visible}}@-o-keyframes -amp-start{from{visibility:hidden}to{visibility:visible}}@keyframes -amp-start{from{visibility:hidden}to{visibility:visible}}
